{
  "compilerOptions": {
    "module": "commonjs",
    // "noImplicitAny": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    // "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "noUnusedLocals": true, /* Report errors on unused locals. */
    "noUnusedParameters": true
  },
  "exclude": ["node_modules"]
}
